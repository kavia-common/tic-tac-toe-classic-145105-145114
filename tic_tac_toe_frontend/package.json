{
  "name": "reactnative",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint .",
    "ci:check": "eslint . && echo 'CI check completed (no native build required)'",
    "prebuild:android": "expo prebuild --platform android",
    "build": "npm run prebuild:android && cd android && ./gradlew assembleDebug",
    "test": "jest --runInBand",
    "test:ci": "CI=true jest --runInBand --coverage"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@react-native-async-storage/async-storage": "~2.1.0",
    "expo": "~53.0.20",
    "expo-linear-gradient": "~13.0.2",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-web": "^0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.10",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^30.2.0",
    "jest-expo": "^53.0.10",
    "jiti": "^2.5.1",
    "react-test-renderer": "^19.1.1",
    "ts-jest": "^29.4.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.40.0",
    "whatwg-fetch": "^3.6.20"
  },
  "private": true
}
