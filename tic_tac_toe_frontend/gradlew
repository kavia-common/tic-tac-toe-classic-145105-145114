#!/usr/bin/env sh
# Workspace-level Gradle wrapper shim for Expo managed projects.
# Some CI/analyzers invoke ./gradlew from the workspace directory. Provide a safe no-op unless native project exists.

set -e

if [ -f "./android/gradlew" ]; then
  echo "Delegating to ./android/gradlew $@"
  cd android
  exec ./gradlew "$@"
else
  echo "gradlew shim (workspace): No native Android project detected (Expo managed)."
  echo "Run 'npm run prebuild:android' to generate ./android, then re-run Gradle."
  exit 0
fi
